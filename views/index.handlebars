<head>

<title> Eat-Da-Burger </title>

<link rel="stylesheet" type="text/css" href="../public/assets/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="../public/assets/css/burger_style.css">

</head>

<body class="container">

<img src="../public/assets/img/hamburger.png">

<h1> Eat-Da-Burger</h1>


<div class="row">
	<div id="unDevour" class="container col-md-3 col-md-offset-2">
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<div class="burger">
						{{this.burger_name}}
					</div>
				{{/unless}}
			{{/each}}
		</ul>

	</div>

	<div class="container col-md-2">
			{{#each burgers}}
				{{#unless this.devoured}}
					<div class="devourButton">
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<button type="submit" class="devourButton"> Devour it!</button>
						</form>
					</div>
				{{/unless}}
			{{/each}}
	</div>

	<div id="devoured" class="container col-md-3">
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<div class="devoured"> 
						{{this.burger_name}}
					</div>
				{{/if}}
			{{/each}}
		</ul>
	</div>

</div>

	<div class="row">
		<h2> Add a buger </h2>

			<form class="create-update-form" action="/" method="POST">

				<div class="form-group">
					<label for="burger"> Burger name: </label>
					<input type="text" id="burger" name="name">
				</div>

				<button type="submit"> Add Burger </button>
			</form>

	</div>




</body>


